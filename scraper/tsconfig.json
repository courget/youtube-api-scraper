{
  "compilerOptions": {
    "lib": ["es2021"],
    "target": "es2021",
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,

    "outDir": "dist",
    "sourceMap": true,
    "declaration": true,

    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true
  },
  "include": ["src/**/*"],
  "exclude": ["dist", "node_modules"]
}
